<h2>Book Management</h2>

<%= form_with url: books_path, method: :get, local: true do %>
  <div class="field">
    <%= label_tag :search, "Search Books:" %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", class: "button" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>ISBN</th>
      <th>Total Copies</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.isbn %></td>
        <td><%= book.total_copies %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.librarian? %>
  <%= link_to 'Add New Book', new_book_path, class: "button" %>
<% end %>
